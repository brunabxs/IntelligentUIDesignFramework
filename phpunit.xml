<phpunit xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:noNamespaceSchemaLocation="http://schema.phpunit.de/4.2/phpunit.xsd"
         backupGlobals="true"
         bootstrap="vendor/autoload.php">
  <php>
    <var name="DB_DSN" value="mysql:dbname=db_test;host=localhost" />
    <var name="DB_USER" value="root" />
    <var name="DB_PASSWD" value="" />
    <var name="DB_DBNAME" value="db_test" />
  </php>
  <testsuites>
    <testsuite name="Functional TestSuite">
      <directory>src/test/functional</directory>
    </testsuite>
    <testsuite name="Unit TestSuite">
      <directory>src/test/unit</directory>
    </testsuite>
  </testsuites>
</phpunit>
